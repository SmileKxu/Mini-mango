  <li role="presentation" class="active"><a href="#">Home</a></li>
  <li role="presentation"><a href="#">Profile</a></li>
  <li role="presentation"><a href="#">Messages</a></li>
</ul> -->
  <div class="index_contain">
<ul class="index_question clearfix">

     <% data_que.forEach(function(data){ %>
      <li>


  <div class="index_rank">
    <div class="index_votes">
       <div class="index_votesnum"><%= data.votes %></div>
       <smail>得票</smail>
    </div>
  <div class="index_answer">
    <div class="index_answernum"><%= data.answers %></div>
    <smail>回答</smail>
  </div>
  <div class="index_brows">
    <div class="index_browsnum"><%= data.scans %></div>
    <smail>浏览</smail>
  </div>
  </div>
  <div class="index_summary">
    <div class="index_summary_author">
      <a id="index_col" href="/users/<%= data_que.puber %>"><%= data.puber %></a>
      <span></span>
      <a id="index_col" herf = "#"><%= data.ltime %></a></div>
  <div>
    <div class="index_summary_contain"><a  href="/questions/<%= data_que._id %>"><%= data.title %></a></div>
     <% data.tags.forEach(function(data){ %>
    <div class="index_summary_tag"><a  class="index_tag" href="#"><%= data %></a></div>
    <% }); %>
  </div>
    </div>

</li>

<% }); %>
    </ul>
  </div>
  </div>
   <div class="col-md-3">
     <div class="index_widget">
       <div class="index_widget_title">
         <span class="index_span">排行榜</span>
         <!-- 排行榜 <span class="index_span">
           <a id="index_col" class="active" href="#">今天</a>
          . <a id="index_col" href="#">本周</a>.
           <a id="index_col" href="#">更多</a>
         </span> -->
       </div>
       <ol class="index_user">

     <% data_use.forEach(function(data){ %>
         <li ><img src="#" alt="">
         <a href="#"><%= data.nick %></a>
       <span><add>+</add><%= data.likes %></span>
     </li>
<% }); %>
       </ol>
     </div>
      <div class="index_image clearfix"><img id="lunbo" src="/images/index_lunbo.jpg" alt=""></div>

   </div>
 </div>


</div>
<div class="btn-group" role="group" aria-label="...">
  <button type="button" class="btn btn-default">上一页</button>
  <button type="button" class="btn btn-default">刷新</button>
  <button type="button" class="btn btn-default">下一页</button>
</div>
</div>
